{
	"root": true,
	"env": {
		"browser": false,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["prettier"],
	"globals": {
		"process": true
	},
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": [2, { "useTabs": true }]
	}
}
